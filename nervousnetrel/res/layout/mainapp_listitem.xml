<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/img_mainAppImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:maxWidth="75dp"
        android:scaleType="fitCenter"
        android:src="@drawable/appimages_nervousnet31c3" />

    <TextView
        android:id="@+id/txt_MainAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/img_mainAppImage"
        android:gravity="left"
        android:maxLines="1"
        android:paddingLeft="5dp"
        android:text="Accelerometer"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_MainAppDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_MainAppName"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txt_MainAppName"
        android:gravity="left"
        android:maxLines="1"
        android:paddingLeft="5dp"
        android:text="Accelerometer"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="15sp" />

</RelativeLayout>